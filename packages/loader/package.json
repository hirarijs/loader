{
  "name": "@hirarijs/loader",
  "version": "1.0.1",
  "description": "Runtime loader for HirariJS that wires loader plugins and config",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./register": {
      "import": "./dist/register-auto.js",
      "require": "./dist/register-auto.cjs",
      "types": "./dist/register.d.ts"
    },
    "./loader": "./dist/loader.js",
    "./import": "./dist/import.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/register.ts src/register-auto.ts src/loader.ts src/import.ts --format esm,cjs --dts",
    "test": "node --test"
  },
  "dependencies": {
    "esbuild": "^0.21.5",
    "pirates": "^4.0.6",
    "source-map-support": "^0.5.21"
  },
  "peerDependencies": {
    "@hirarijs/loader-ts": "*",
    "@hirarijs/loader-tsx": "*",
    "@hirarijs/loader-vue": "*"
  },
  "devDependencies": {
    "@types/source-map-support": "^0.5.10",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
